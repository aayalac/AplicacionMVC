@using AplicacionMVC.Models;
@model List<Conductor>

@{
    ViewData["tittle"] = "Conductores";
}
<h1>@ViewData["Title"]</h1>

@if (Model.Count != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Identificacion</th>
                <th scope="col">Ruta</th>
                <th scope="col">Bus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Nombre</td>
                    <td>@c.Apellido</td>
                    <td>@c.Identificacion</td>
                    <td>@c.Ruta</td>
                    <td>@c.BusId</td>                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
            No se encuentran datos.
        </div>
    </div>
}