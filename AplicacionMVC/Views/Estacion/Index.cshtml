@using AplicacionMVC.Models;
@model List<Estacion>

@{
    ViewData["tittle"] = "Estaciones";
}
<h1>@ViewData["Title"]</h1>

@if (Model.Count != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Troncal</th>
                <th scope="col">Direccion</th>
                <th scope="col"># de vagones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Nombre</td>
                    <td>@e.Troncal</td>
                    <td>@e.Direccion</td>
                    <td>@e.NumeroVagones</td>               
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
            No se encuentran datos.
        </div>
    </div>
}
